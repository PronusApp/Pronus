<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_of_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true" >

            <com.example.widget.CircularImageView
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/demo_profile" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/profileImage"
                android:text="Paul"
                android:textColor="@color/Blue_Dark"
                android:textSize="20sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/smsMessage"
                android:layout_width="190dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/userName"
                android:layout_toRightOf="@+id/smsCounter"
                android:maxLines="2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/timeOfLastSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/smsMessage"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="23:55"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/smsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/userName"
                android:background="@drawable/sms_counter"
                android:gravity="center_horizontal|center_vertical"
                android:shadowDx="2"
                android:shadowDy="4"
                android:text="1"
                android:textColor="@color/Ivory"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

    </RelativeLayout>

</FrameLayout>