<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_of_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/settings"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/newMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="Preferenze"
            android:textColor="@color/Blue"
            android:textSize="14dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_above="@+id/sms_list"
            android:layout_alignRight="@+id/addContact"
            android:background="@color/Blue" />

        <Button
            android:id="@+id/addContact"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sms_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="2dp"
            android:text="Nuovo Contatto"
            android:textColor="@color/Blue"
            android:textSize="14dp"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/sms_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/myMail"
            android:animateLayoutChanges="true"
            android:divider="@null"
            android:dividerHeight="0dp" >
        </ListView>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_above="@+id/sms_list"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/newMessage"
            android:layout_toLeftOf="@+id/settings"
            android:background="@color/Blue" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myMail"
            android:layout_centerHorizontal="true"
            android:text="Click for settings"
            android:textColor="@color/Ivory" />

        <TextView
            android:id="@+id/myMail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@color/Blue_Dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="myContact@gmail.com"
            android:textColor="@color/Ivory"
            android:textSize="20sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/newMessage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sms_list"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/settings"
            android:layout_toRightOf="@+id/view1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="Nuova Conversazione"
            android:textColor="@color/Blue"
            android:textSize="14dp"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>